        "body": {
          "mode": "raw",
          "raw": "{\n  \"slug\": \"cosmic-consciousness\",\n  \"title\": \"Cosmic Consciousness: Updated Title\",\n  \"date\": \"March 1, 2025\",\n  \"excerpt\": \"Updated excerpt for this blog post.\",\n  \"coverImage\": \"https://images.unsplash.com/photo-1446776653964-20c1d3a81b06?w=800&h=600\",\n  \"content\": [\n    \"Updated first paragraph.\",\n    \"Updated second paragraph.\",\n    \"Updated third paragraph.\"\n  ]\n}"
